<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amazon.vardaan.pwain_merchant.otpActivity">

    <TextView
        android:id="@+id/otpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:text="Enter  OTP sent on customer's number"/>

    <EditText
        android:id="@+id/editOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:maxLength="4"
        android:gravity="center"
        android:layout_below="@+id/otpTitle"
        android:text="1234"/>
    <Button
        android:id="@+id/otpVerifyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Amazon_Orange"
        android:layout_below="@id/editOTP"
        android:text="Verify"
        android:layout_marginTop="11dp"/>


</RelativeLayout>
